<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Bundle Configuration -->
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>ClearMind Control Center</string>
	<key>CFBundleDisplayName</key>
	<string>ClearMind Control Center</string>
	<key>CFBundlePackageType</key>
	<string>$(PRODUCT_BUNDLE_PACKAGE_TYPE)</string>
	<key>CFBundleShortVersionString</key>
	<string>$(MARKETING_VERSION)</string>
	<key>CFBundleVersion</key>
	<string>$(CURRENT_PROJECT_VERSION)</string>
	
	<!-- Application Category -->
	<key>LSApplicationCategoryType</key>
	<string>public.app-category.utilities</string>
	
	<!-- Minimum System Version -->
	<key>LSMinimumSystemVersion</key>
	<string>14.0</string>
	
	<!-- Menu Bar App (Agent) - Hides from Dock by default -->
	<key>LSUIElement</key>
	<true/>
	
	<!-- Principal Class -->
	<key>NSPrincipalClass</key>
	<string>NSApplication</string>
	
	<!-- Human Readable Copyright -->
	<key>NSHumanReadableCopyright</key>
	<string>Copyright Â© 2024 ClearMind. All rights reserved.</string>
	
	<!-- Privacy Usage Descriptions -->
	
	<!-- AppleScript/Automation Permission -->
	<key>NSAppleEventsUsageDescription</key>
	<string>ClearMind Control Center needs Automation permission to manage browser tabs in Safari, Chrome, Edge, and other browsers. This allows you to view and close tabs across all your browsers from one place.</string>
	
	<!-- Accessibility Permission -->
	<key>NSAccessibilityUsageDescription</key>
	<string>ClearMind Control Center uses Accessibility access to provide advanced system monitoring and window management features.</string>
	
	<!-- System Administration Permission (for purge command) -->
	<key>NSSystemAdministrationUsageDescription</key>
	<string>ClearMind Control Center may request administrator privileges to run the memory purge command. This is an optional advanced feature that frees inactive memory.</string>
	
	<!-- Supported Architectures (Apple Silicon optimized) -->
	<key>LSArchitecturePriority</key>
	<array>
		<string>arm64</string>
		<string>x86_64</string>
	</array>
	
	<!-- High Resolution Capable -->
	<key>NSHighResolutionCapable</key>
	<true/>
	
	<!-- Supports Secure Coding -->
	<key>NSSupportsSecureCoding</key>
	<true/>
</dict>
</plist>
