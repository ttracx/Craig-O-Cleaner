// File: CraigOClean-vNext/CraigOClean/Config/BuildSettings.xcconfig
// Craig-O-Clean - Base Build Settings
// Shared settings for all configurations

// MARK: - Product Settings
PRODUCT_NAME = Craig-O-Clean
PRODUCT_BUNDLE_IDENTIFIER = com.craigosoft.CraigOClean
MARKETING_VERSION = 1.0.0
CURRENT_PROJECT_VERSION = 1

// MARK: - Deployment
MACOSX_DEPLOYMENT_TARGET = 13.0
SWIFT_VERSION = 5.9

// MARK: - Architecture
ARCHS = $(ARCHS_STANDARD)
VALID_ARCHS = arm64 x86_64

// MARK: - Compiler Settings
SWIFT_OPTIMIZATION_LEVEL = -Onone
GCC_OPTIMIZATION_LEVEL = 0
ENABLE_TESTABILITY = YES

// MARK: - Code Signing (Base)
CODE_SIGN_STYLE = Automatic
DEVELOPMENT_TEAM =

// MARK: - Framework Search Paths
FRAMEWORK_SEARCH_PATHS = $(inherited)

// MARK: - Build Directories
CONFIGURATION_BUILD_DIR = $(BUILD_DIR)/$(CONFIGURATION)

// MARK: - Debug Settings
DEBUG_INFORMATION_FORMAT = dwarf-with-dsym
ENABLE_NS_ASSERTIONS = YES

// MARK: - Localization
INFOPLIST_KEY_CFBundleDisplayName = Craig-O-Clean
INFOPLIST_KEY_LSApplicationCategoryType = public.app-category.utilities
