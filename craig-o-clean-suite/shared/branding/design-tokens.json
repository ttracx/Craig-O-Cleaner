{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "name": "Craig-O-Clean Design Tokens",
  "description": "VibeCaaS-powered design system tokens for Craig-O-Clean Suite",
  "version": "1.0.0",
  "colors": {
    "primary": {
      "name": "Vibe Purple",
      "hex": "#6D4AFF",
      "rgb": {
        "r": 109,
        "g": 74,
        "b": 255
      },
      "hsl": {
        "h": 252,
        "s": 100,
        "l": 65
      },
      "usage": "Primary accent, CTAs, active states, links"
    },
    "secondary": {
      "name": "Aqua Teal",
      "hex": "#14B8A6",
      "rgb": {
        "r": 20,
        "g": 184,
        "b": 166
      },
      "hsl": {
        "h": 173,
        "s": 80,
        "l": 40
      },
      "usage": "Secondary accent, success states, memory indicators, positive"
    },
    "accent": {
      "name": "Signal Amber",
      "hex": "#FF8C00",
      "rgb": {
        "r": 255,
        "g": 140,
        "b": 0
      },
      "hsl": {
        "h": 33,
        "s": 100,
        "l": 50
      },
      "usage": "Warnings, attention states, CPU alerts, elevated pressure"
    },
    "semantic": {
      "success": {
        "hex": "#14B8A6",
        "alias": "secondary"
      },
      "warning": {
        "hex": "#FF8C00",
        "alias": "accent"
      },
      "error": {
        "hex": "#EF4444",
        "rgb": {
          "r": 239,
          "g": 68,
          "b": 68
        }
      },
      "info": {
        "hex": "#6D4AFF",
        "alias": "primary"
      }
    },
    "neutrals": {
      "white": "#FFFFFF",
      "gray50": "#F9FAFB",
      "gray100": "#F3F4F6",
      "gray200": "#E5E7EB",
      "gray300": "#D1D5DB",
      "gray400": "#9CA3AF",
      "gray500": "#6B7280",
      "gray600": "#4B5563",
      "gray700": "#374151",
      "gray800": "#1F2937",
      "gray900": "#111827",
      "black": "#000000"
    },
    "memoryPressure": {
      "normal": "#14B8A6",
      "elevated": "#FF8C00",
      "critical": "#EF4444"
    }
  },
  "gradients": {
    "brand": {
      "type": "linear",
      "angle": 135,
      "stops": [
        {
          "color": "#6D4AFF",
          "position": 0
        },
        {
          "color": "#14B8A6",
          "position": 100
        }
      ]
    },
    "surface": {
      "type": "linear",
      "angle": 180,
      "stops": [
        {
          "color": "#F9FAFB",
          "position": 0
        },
        {
          "color": "#FFFFFF",
          "position": 100
        }
      ]
    }
  },
  "typography": {
    "fontFamilies": {
      "primary": {
        "android": "Roboto",
        "windows": "Segoe UI Variable",
        "linux": "Ubuntu, Cantarell, sans-serif",
        "macos": "SF Pro",
        "fallback": "system-ui, sans-serif"
      },
      "monospace": {
        "android": "Roboto Mono",
        "windows": "Cascadia Code, Consolas",
        "linux": "Ubuntu Mono, monospace",
        "macos": "SF Mono",
        "fallback": "monospace"
      }
    },
    "fontSizes": {
      "xs": 10,
      "sm": 12,
      "base": 14,
      "md": 16,
      "lg": 18,
      "xl": 20,
      "2xl": 24,
      "3xl": 30,
      "4xl": 36
    },
    "fontWeights": {
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "lineHeights": {
      "tight": 1.2,
      "normal": 1.5,
      "relaxed": 1.75
    }
  },
  "spacing": {
    "unit": 4,
    "scale": {
      "0": 0,
      "1": 4,
      "2": 8,
      "3": 12,
      "4": 16,
      "5": 20,
      "6": 24,
      "8": 32,
      "10": 40,
      "12": 48,
      "16": 64
    }
  },
  "borderRadius": {
    "none": 0,
    "sm": 4,
    "md": 8,
    "lg": 12,
    "xl": 16,
    "2xl": 24,
    "full": 9999
  },
  "shadows": {
    "sm": {
      "x": 0,
      "y": 1,
      "blur": 2,
      "spread": 0,
      "color": "rgba(0, 0, 0, 0.05)"
    },
    "md": {
      "x": 0,
      "y": 2,
      "blur": 4,
      "spread": 0,
      "color": "rgba(0, 0, 0, 0.1)"
    },
    "lg": {
      "x": 0,
      "y": 4,
      "blur": 8,
      "spread": 0,
      "color": "rgba(0, 0, 0, 0.1)"
    },
    "xl": {
      "x": 0,
      "y": 8,
      "blur": 16,
      "spread": 0,
      "color": "rgba(0, 0, 0, 0.15)"
    }
  },
  "animations": {
    "durations": {
      "instant": 0,
      "fast": 150,
      "normal": 300,
      "slow": 500
    },
    "easings": {
      "linear": "linear",
      "easeIn": "cubic-bezier(0.4, 0, 1, 1)",
      "easeOut": "cubic-bezier(0, 0, 0.2, 1)",
      "easeInOut": "cubic-bezier(0.4, 0, 0.2, 1)"
    }
  },
  "iconography": {
    "sizes": {
      "xs": 12,
      "sm": 16,
      "md": 20,
      "lg": 24,
      "xl": 32
    },
    "systemIcons": {
      "cpu": "cpu",
      "memory": "memory",
      "disk": "storage",
      "network": "network_wifi",
      "process": "apps",
      "kill": "close",
      "refresh": "refresh",
      "settings": "settings",
      "warning": "warning",
      "error": "error",
      "success": "check_circle",
      "info": "info"
    }
  },
  "components": {
    "card": {
      "borderRadius": 12,
      "padding": 16,
      "shadow": "md",
      "backgroundColor": {
        "light": "#FFFFFF",
        "dark": "#1F2937"
      }
    },
    "button": {
      "borderRadius": 8,
      "paddingHorizontal": 16,
      "paddingVertical": 8,
      "minHeight": 40
    },
    "input": {
      "borderRadius": 8,
      "borderWidth": 1,
      "height": 40,
      "padding": 12
    },
    "progressBar": {
      "height": 8,
      "borderRadius": 4
    },
    "gauge": {
      "strokeWidth": 8,
      "size": 100
    }
  },
  "breakpoints": {
    "compact": 600,
    "medium": 840,
    "expanded": 1200
  }
}
