# Production Environment Variables for craigoclean.com
# Copy these to your hosting provider (Vercel/Railway)

# Stripe Configuration (PRODUCTION KEYS)
STRIPE_SECRET_KEY=sk_live_YOUR_LIVE_KEY_HERE
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_LIVE_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_PRODUCTION_WEBHOOK_SECRET_HERE
STRIPE_PRICE_ID=price_YOUR_PRODUCTION_PRICE_ID_HERE

# Product Configuration
PRODUCT_PRICE=19.99
APP_NAME=Craig-O-Clean
APP_VERSION=2.0.0

# Production URLs
APP_URL=https://craigoclean.com
API_URL=https://craigoclean.com/api
DOWNLOAD_URL=https://craigoclean.com/downloads/craig-o-clean-full.dmg

# Database (Production)
# Use Vercel Postgres, Supabase, or your own PostgreSQL
DATABASE_URL=postgresql://user:password@host:5432/craig_o_clean_production

# Email Configuration (SendGrid)
SENDGRID_API_KEY=SG.YOUR_PRODUCTION_API_KEY_HERE
FROM_EMAIL=support@craigoclean.com

# Server Configuration
PORT=3000
NODE_ENV=production

# Security
ALLOWED_ORIGINS=https://craigoclean.com,https://www.craigoclean.com

# Webhook URL (for documentation)
# Add this URL to Stripe Dashboard:
# https://craigoclean.com/api/webhook/stripe
