#!/bin/bash
# Git Hook: Auto-sync Xcode project after checkout
# This hook runs after git checkout

set -e

PREV_HEAD=$1
NEW_HEAD=$2
BRANCH_CHECKOUT=$3

# Only sync on branch checkout (not file checkout)
if [ "$BRANCH_CHECKOUT" != "1" ]; then
    exit 0
fi

PROJECT_NAME="Craig-O-Clean"
SWIFT_FILES_CHANGED=false

# Check if any Swift files were added or removed between branches
if git diff-tree -r --name-only --no-commit-id $PREV_HEAD $NEW_HEAD | grep -q "\.swift$"; then
    SWIFT_FILES_CHANGED=true
fi

# Check if project.yml was modified
if git diff-tree -r --name-only --no-commit-id $PREV_HEAD $NEW_HEAD | grep -q "^project\.yml$"; then
    SWIFT_FILES_CHANGED=true
fi

# If Swift files changed, sync the project
if [ "$SWIFT_FILES_CHANGED" = true ]; then
    echo ""
    echo "üîÑ Swift files detected in branch checkout, syncing Xcode project..."
    echo ""

    if command -v xcodegen &> /dev/null; then
        xcodegen generate
        echo "‚úÖ Xcode project synced successfully!"
    else
        echo "‚ö†Ô∏è  XcodeGen not found. Run 'make setup' to install."
        echo "   Or manually sync with: make sync"
    fi

    echo ""
fi
